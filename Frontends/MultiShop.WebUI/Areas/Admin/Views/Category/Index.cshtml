@model List<ResultCategoryDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">



<section class="content container-fluid">
    <div class="row">

        <div class="col-md-12">
            <div class="chart-box">
          
                <p>Kategori ile ilgili işlemlerinizi aşağıdaki tablo üzerinden gerçekleştirebilirsiniz.</p>
                <div class="bs-example" data-example-id="bordered-table">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Kategori Adı</th>
                                <th>Kategoriye Ait Ürünler</th>
                                <th>Sil</th>
                                <th>Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach(var item in Model){
                            <tr>
                              @*   <th scope="row">1</th> *@
                                <td>@item.CategoryID</td>
                                <td>@item.CategoryName</td>
                                <td><a href="#" class="btn btn-warning">Kategoriye Ait Ürünler</a></td>
                                    <td><a href="/Admin/Category/DeleteCategory/@item.CategoryID" class="btn btn-danger"><i class="fas fa-trash-alt"></i> Sil</a></td>
                                    <td><a href="/Admin/Category/UpdateCategory/@item.CategoryID" class="btn btn-success"><i class="fas fa-edit"></i> Güncelle </a></td>
                            </tr>
                            }
                        </tbody>
                    </table>
                    <br />
                    <a href="CreateCategory/" class="btn btn-primary"><i class="fas fa-plus"></i> Yeni Kategori Girişi</a>
                </div>
            </div>
        </div>

    </div>
</section>

